@model LoginModel

@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Login";
}

<p>Minha tela de login</p>

<!--Mensagem de erro-->
@if(TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>
 }

<!--Mensagem de sucesso-->
@if(TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
        @TempData["MensagemSucesso"]
    </div>
 }


 <!--Tela de login-->
<form class="form-control" asp-controller="Login" asp-action="Entrar" method="post">
 
  <div class="mb-3">
    <label asp-for="Login" class="form-label">Login</label>
    <input type="text" asp-for="Login" class="form-control" id="Login">
    @Html.ValidationMessageFor(x => x.Login)
  </div>

  <div class="mb-3">
    <label asp-for="Senha" class="form-label">Senha</label>
    <input type="password" asp-for="Senha" class="form-control" id="Senha"/>
    @Html.ValidationMessageFor(x => x.Senha)
  </div>

  <p class="mb-4 text-sm mx-auto">
      Esqueceu sua senha?
      <a asp-action="RedefinirSenha" asp-controller="Login" class="text-primary" >Redefir senha</a>
  </p>
  
  <br />

  <button type="submit" class="btn btn-primary btn-group-vertical">Entrar</button>
</form>