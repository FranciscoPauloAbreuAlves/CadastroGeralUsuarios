@model UsuarioModel

@{
    ViewData["Title"] = "Confirmacão de apagar Contato";
}

<div class="text-center">
    <h3 class="display-4">Realamente quer apagar o usuário<br /> <strong>@Model.Nome</strong>?</h3>
</div>

<div class="text-center">
    <a class="btn btn-primary" asp-action="Index" asp-controller="Usuario" role="button">Cancelar exclusão</a>
    <a class="btn btn-danger" asp-action="Apagar" asp-controller="Usuario" asp-route-id="@Model.Id" role="button">Confirmar exclusão</a>    
</div>
