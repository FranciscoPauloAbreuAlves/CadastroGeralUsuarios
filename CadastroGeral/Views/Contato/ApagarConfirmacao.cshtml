@model ContatoModel

@{
    ViewData["Title"] = "Confirmacão de apagar Contato";
}

<div class="text-center">
    <h3 class="display-4">Realmente quer apagar o contato <strong>@Model.Nome</strong>?</h3>
</div>
<br />

<div class="text-center">
    <a class="btn btn-primary" asp-action="Index" asp-controller="Contato" role="button">Cancelar exclusão</a>
    <a class="btn btn-danger" asp-action="Apagar" asp-controller="Contato" asp-route-id="@Model.Id" role="button">Confirmar exclusão</a>    
</div>
